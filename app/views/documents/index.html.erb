<h1>Listing documents</h1>

<table class="table">
  <tr>
    <th>Titre</th>
    <th>Auteur</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.titre %></td>
    <td><%= document.auteur %></td>
    <td><button class="btn btn-success btn-sm"><%= link_to 'Show', [document.auteur, document] %></td>
    <td><button class="btn btn-danger btn-sm"><%= link_to 'Destroy', [document.auteur, document], method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
<% end %>
</table>

<br />

<button class="btn btn-primary"><%= link_to 'New Document', new_auteur_document_path(params[:auteur_id]) %>